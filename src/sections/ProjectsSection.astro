---
import type { ProjectsSection } from '@/types/content.d.ts'

import DividedList from '@/components/DividedList.astro'
import Divider from '@/components/Divider.astro'
import Project from '@/components/Project.astro'
import SectionCard from '@/components/SectionCard.astro'

export interface Props extends ProjectsSection {}

const { config, projects } = Astro.props
---

<SectionCard {...config}>
  <DividedList>
    {
      projects.flatMap((project) => [
        <Project {...project} screenshotsConfig={config.screenshots} />,
        <Divider />,
      ])
    }
  </DividedList>
</SectionCard>
