---
import type { Media } from '@/types/content'

import Photo from '@/components/Photo.astro'
import Typography from '@/components/Typography.astro'

export interface Props extends Media {}

const { image, title, type, url } = Astro.props
---

<a
  href={url}
  target="_blank"
  class="flex w-full flex-col gap-3 transition duration-300 hover:-translate-y-1 hover:scale-110"
>
  <Photo
    class="aspect-square rounded-lg object-cover shadow-md"
    src={image}
    alt={`a picture about ${title}`}
    width={200}
    height={200}
  />
  <div class="gap-1">
    <Typography variant="tile-title">
      {title}
    </Typography>
    <Typography variant="tile-subtitle">
      {type}
    </Typography>
  </div>
</a>
