---
import type { Book } from '@/types/content'

import Photo from './Photo.astro'
import Typography from './Typography.astro'

export interface Props extends Book {}

const { author, image, title, url } = Astro.props
---

<a
  href={url}
  target="_blank"
  class="flex w-full flex-col gap-3 transition duration-300 hover:-translate-y-1 hover:scale-110"
>
  <Photo
    src={image}
    alt={title}
    class="aspect-[3/4] rounded-lg object-cover shadow-md"
    width={300}
    height={400}
  />
  <div class="w-full gap-1">
    <Typography variant="tile-title">
      {title}
    </Typography>
    <Typography variant="tile-subtitle">
      {author}
    </Typography>
  </div>
</a>
