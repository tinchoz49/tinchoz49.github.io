---
import type { Book, Media, Person, Video } from '@/types/content'

import Typography from '@/components/Typography.astro'

export interface Props {
  subSection?: {
    title: string
    data: Book[] | Person[] | Video[] | Media[]
  }
  minTileWidth: number
}

const { subSection, minTileWidth } = Astro.props
---

{
  subSection && (
    <div class="flex flex-col gap-6">
      <Typography variant="section-subtitle">{subSection.title}</Typography>
      <div
        class="tile grid gap-8"
        style={{ '--min-tile-width': `${minTileWidth}px` }}
      >
        <slot />
      </div>
    </div>
  )
}

<style>
  .tile {
    grid-template-columns: repeat(
      auto-fill,
      minmax(var(--min-tile-width), 1fr)
    );
  }
</style>
