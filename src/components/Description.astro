---
import { twJoin } from 'tailwind-merge'

import BaseDescription from './BaseDescription.astro'
import { variantToClassName } from './Typography.astro'

interface Props {
  content: string
  class?: string
}

const { content, class: className } = Astro.props
---

<BaseDescription
  content={content}
  class={twJoin(variantToClassName.paragraph, className)}
/>
